<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mSanckView_videos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.propertyInfo.media.SiteVideos">

    <customs.CustomTextView
        android:id="@+id/no_videos"
        style="@style/customTitleCenter"
        android:text="@string/site_videos"
        android:visibility="visible"
        app:typeface="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/site_videos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:listitem="@layout/item_video" />

</FrameLayout>