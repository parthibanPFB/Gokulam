<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_lay_booked"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.6"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/land_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/menu_boarder" />

            <customs.CustomTextView
                android:id="@+id/booked_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@color/black_transparent_50_op"
                android:padding="4dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/dp_10"
                app:typeface="bold" />

            <customs.CustomTextView
                android:id="@+id/booked_amount_booked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/black_transparent_50_op"
                android:gravity="right"
                android:padding="4dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14"
                app:typeface="bold" />
        </FrameLayout>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <customs.CustomTextView
                android:id="@+id/land_name_booked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16"
                app:typeface="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <customs.CustomTextView
                    android:id="@+id/place_area_booked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_12"
                    app:typeface="medium" />

                <customs.CustomTextView
                    android:id="@+id/land_release"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:padding="8dp"
                    android:text="Release"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <customs.CustomTextView
                    android:id="@+id/total_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingRight="4dp"
                    android:text=""
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/dp_14"
                    app:typeface="bold" />

                <customs.CustomTextView
                    android:id="@+id/land_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:padding="4dp"
                    android:text=""
                    android:visibility="visible"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_10" />
            </LinearLayout>

        </android.support.v7.widget.LinearLayoutCompat>

    </LinearLayout>
</android.support.v7.widget.CardView>