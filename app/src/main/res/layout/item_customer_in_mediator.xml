<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_lay_cutomer_mediator"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/land_img_in_mediator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:scaleType="fitXY"
            android:src="@drawable/menu_boarder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <customs.CustomTextView
                    android:id="@+id/customer_name_in_mediator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_14"
                    app:typeface="bold" />

                <ImageView
                    android:id="@+id/call_img"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_phone" />
            </LinearLayout>

            <customs.CustomTextView
                android:id="@+id/customer_address_in_mediator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/dp_10" />
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>